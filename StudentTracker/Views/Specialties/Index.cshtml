@model IEnumerable<StudentTracker.Models.Specialty>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SpecialtyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Faculty)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SpecialtyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Faculty.FacultyID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SpecialtyID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SpecialtyID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SpecialtyID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
