@model PaginatedList<StudentTracker.Models.Student>

@{
    ViewData["Title"] = "Index";
}
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]"/>
            <input type="submit" value="Поиск" class="btn btn-default"/>
            <a asp-action="Index">Вернуться к полному списку</a>
        </p>
    </div>
</form>

<p>
    <a asp-action="Create">Добавить студента</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            <a asp-action="Index" asp-route-sortOrder="@ViewData["LastNameSortParam"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">
                Фамилия
            </a>
        </th>
        <th>
            <a asp-action="Index" asp-route-sortOrder="@ViewData["FirstNameSortParam"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">
                Имя
            </a>
        </th>
        <th>
            <a asp-action="Index" asp-route-sortOrder="@ViewData["MidNameSortParam"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">
                Отчество
            </a>
        </th>
        <th>
            <a asp-action="Index" asp-route-sortOrder="@ViewData["GenderSortParam"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">
                Пол
            </a>
        </th>
        <th>
            <a asp-action="Index" asp-route-sortOrder="@ViewData["EndDateSortParam"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">
                Год окончания
            </a>
        </th>
        <th>
            <a asp-action="Index" asp-route-sortOrder="@ViewData["FacultySortParam"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">
                Факультет
            </a>
        </th>
        <th>
            <a asp-action="Index" asp-route-sortOrder="@ViewData["SpecialtySortParam"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">
                Специальность
            </a>
        </th>
        <th>
            <a asp-action="Index" asp-route-sortOrder="@ViewData["AcademicDegreeSortParam"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">
                Академическая степень
            </a>
        </th>
        <th>
            <a asp-action="Index" asp-route-sortOrder="@ViewData["FormEducationSortParam"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">
                Форма обучения
            </a>
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MidName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender.GenderName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specialty.Faculty.FacultyShortName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specialty.SpecialtyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AcademicDegree.AcademicDegreeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FormEducation.FormEducationName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StudentID">Изменить</a> | 
                <a asp-action="Details" asp-route-id="@item.StudentID">Детали</a> | 
                <a asp-action="Delete" asp-route-id="@item.StudentID">Удалить</a>
            </td>
        </tr>
    }
    </tbody>
</table>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage? "disabled" : "";
}

<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex - 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @prevDisabled">
    Previous
</a>
<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex + 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @nextDisabled">
    Next
</a>
