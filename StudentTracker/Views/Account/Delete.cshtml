@model User


@{
    ViewData["Title"] = "Удаление пользователя";
}

<div style="background-color: white; padding: 20px;">

    <h1>Удаление пользователя</h1>

    <h3>Вы точно хотите удалить аккаунт?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Фамилия: 
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LastName)
            </dd>
            <dt class="col-sm-2">
                Имя: 
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FirstName)
            </dd>
            <dt class="col-sm-2">
                email: 
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
        </dl>

        <form asp-controller="Account" asp-action="Delete" asp-route-id="@Model.UserId">
            <input type="hidden" asp-for="UserId" />
            <div class="btn-group">
                <a class="btn btn-outline-primary" asp-action="Details">Назад</a>
                <input type="submit" value="Удалить" class="btn btn-outline-danger" />
            </div>
        </form>
    </div>
</div>
